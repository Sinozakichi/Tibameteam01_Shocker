
<main class="main-content  mt-0">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-cover.jpg'); background-position: top;">
        <span class="mask bg-gradient-dark opacity-6"></span>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 text-center mx-auto">
                    <h1 class="text-white mb-2 mt-5">Welcome!</h1>
                    <p class="text-lead text-white"></p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card z-index-0">
                    <div class="card-header pb-0 text-start">
                        <h4 class="font-weight-bolder">註冊會員</h4>
                    </div>
                    <div class="card-body">
                        <form action="/Member/Register" method="post" role="form">
                            <div class="mb-3">
                                <input type="text" id="Id" name="Id" required class="form-control" placeholder="帳號" aria-label="Name">
                            </div>
                            <div class="mb-3">
                                <input type="password" id="Password" name="Password" required class="form-control" placeholder="密碼" aria-label="Password">
                            </div>
                            <div class="mb-3">
                                <input type="email" id="Email" name="Email" required class="form-control" placeholder="Email" aria-label="Email">
                            </div>
                            <div class="mb-3">
                                <input type="tel" id="Phone" name="Phone" required class="form-control" placeholder="手機" aria-label="Phone">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="NickName" name="NickName" class="form-control" placeholder="暱稱" aria-label="NickName">
                            </div>
                            <div class="mb-3">
                                <input type="date" id="BirthDate" name="BirthDate" class="form-control" placeholder="生日" aria-label="BirthDate">
                            </div>
                            <div class="form-check form-check-info text-start">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                                <label class="form-check-label" for="flexCheckDefault">
                                    我同意 <a href="javascript:;" class="text-dark font-weight-bolder">服務條款</a>
                                </label>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="送出" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0" />
                            </div>
                            <p class="text-sm mt-3 mb-0">已經有帳號? <a href="javascript:;" class="text-dark font-weight-bolder">登入</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>